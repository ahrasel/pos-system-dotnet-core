<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Add New Role</h4>
            </div>
            <form asp-controller="Employee" asp-action="Create" method="POST" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>        
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>First Name <span class="text-danger">*</span></label>
                                <input Name="RoleName" type="text" class="form-control" placeholder="Name" required>
                            </div>
                            <div class="form-group">
                                <label>Email<span class="text-danger">*</span></label>
                                <input Name="RoleName" type="text" class="form-control" placeholder="Name" required>
                            </div>
                            <div class="form-group">
                                <label>Date Of Birth<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="datepicker-autoclose" placeholder="mm/dd/yyyy">
                            </div>
                            <div class="form-group">
                                <label>Address<span class="text-danger">*</span></label>
                                <textarea rows="6" Name="RoleName"class="form-control" placeholder="Name" required></textarea>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Last Name <span class="text-danger">*</span></label>
                                <input Name="RoleName" type="text" class="form-control" placeholder="Name" required>
                            </div>
                            <div class="form-group">
                                <label>Phone Number<span class="text-danger">*</span></label>
                                <input Name="RoleName" type="text" class="form-control" placeholder="Name" required>
                            </div>
                            <div class="form-group">
                                <label>Image<span class="text-danger">*</span></label>
                                <input type="file" class="form-control" id="" required="">
                            </div>
                           <div class="form-group">
                                <label>BIO<span class="text-danger">*</span></label>
                                <textarea rows="6" Name="RoleName"class="form-control" placeholder="Name" required></textarea>
                            </div>
                            
                        </div>
                       <div class="col">
                            <div class="custom-control custom-checkbox mr-sm-2">
                                <input type="checkbox" class="custom-control-input" id="customControlAutosizing1">
                                <label class="custom-control-label" for="customControlAutosizing1">Active</label>
                            </div>
                       </div>
                        
                        <div class="col">
                            <div class="card-action">
                                <button type="submit" class="btn btn-primary float-right">Submit</button>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>  
            </form>
        </div>
    </div>
</div>